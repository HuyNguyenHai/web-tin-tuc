<!DOCTYPE html>
<html lang="en">
	<head>
		<title><%=title%></title>
		<%include ./template/head.ejs%>
	</head>
	<body id="wrapper" style="margin-bottom: 0;">
		<div id="fb-root"></div>
		<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.3"></script>
		<!-- header -->
		<div id="header">
			<div class="container">
				<div class="row">
					<div class="col-lg-9 header-content">
						<h1><a href="/" style="text-decoration: none; color: black">Tin bóng đá</a></h1>
					</div>
					<!-- <div class="col-lg-3 header-contact">
						<div class="icon-box-contact">
							<span><i class="fas fa-envelope"></i> abc@gmail.com</span>
						</div>
						<div class="icon-box-contact">
							<span><i class="fas fa-phone"></i> 0999999999</span>
						</div>
					</div> -->
				</div>
			</div>
		</div>
		<!-- header -->

		<!-- Content -->
		<!-- Section 1 start-->
		<div class="section" style="margin: 0">
			<div class="container" style="background-color: #fff; margin-top: 0">
				<!-- search bar -->
				<div id="buffer" style="padding:30px">
					<form class="form-inline searchbar" action="/search" method="post" accept-charset="utf-8">
						<input type="text" class="search_input" name="keyword" placeholder="Tìm kiếm...">
						<button type="submit" class="search_icon"><i class="fas fa-search"></i></button>
					</form>
				</div>
				<!-- search bar end -->
				<div class="category-container">
					<div class="category-title" style="font-size: 22px; display:inline;">
						Tin <%=category%>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-9">
						<div class="news-content">
							<%-newsContent%>
						</div>
						<hr>
						<div class="content-tag" style="margin: 50px 0">
							<h5>Tags:</h5>
							<%-tags%>
						</div>
						<hr>
						<!-- <div class="content-comment">
							<h5>Bình luận</h5>
							
						</div> -->

						<div class="category-container"  style="margin-top: 60px;">
							<div class="category-title" style="font-size: 22px; display:inline;">
									Có thể bạn quan tâm
							</div>
						</div>	

						<div id="bottom-news-list">
							<%-bottomNewsList%>
						</div>		
					</div>
					<div class="col-sm-3">
						<div class="right-news">
							<div class="category-title right-news-title">
								TIN LIÊN QUAN
							</div>
							<div class="right-news-list">
								<%-relateNewsList%>
							</div>
						</div>
						<div class="right-news">
							<div class="category-title right-news-title">
								TIN HOT
							</div>
							<div class="right-news-list">
								<%-newestNewsList%>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>				
		<!-- Section 1 end-->
		<div id="more">
			<a href="/category/tin-tuc-moi-nhat/trang-1">Xem toàn bộ</a>
		</div>
		<!-- Footer -->
		<% include ./template/footer.ejs%>
		<!-- Footer end -->
		
		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
	</body>
</html>

