		<!-- header -->

		<!-- Content -->
		<!-- Section 1 start-->
		<div class="section" style="margin: 0">
			<div class="container" style="background-color: #fff; margin-top: 0">
				<!-- search bar -->
				<div id="buffer" style="padding:30px">
					<form class="form-inline searchbar" action="/search" method="post" accept-charset="utf-8">
						<input type="text" class="search_input" name="keyword" placeholder="Tìm kiếm...">
						<button type="submit" class="search_icon"><i class="fas fa-search"></i></button>
					</form>
				</div>
				<!-- search bar end -->
				<div class="category-container">
					<div class="category-title" style="font-size: 22px; display:inline;">
						Tin <%=category%>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-9">
						<div class="news-content">
							<%-newsContent%>
						</div>
						<hr>
						<div class="content-tag" style="margin: 50px 0">
							<h5>Tags:</h5>
							<%-tags%>
						</div>
						<hr>
						<!-- <div class="content-comment">
							<h5>Bình luận</h5>
							
						</div> -->

						<div class="category-container"  style="margin-top: 60px;">
							<div class="category-title" style="font-size: 22px; display:inline;">
									Có thể bạn quan tâm
							</div>
						</div>	

						<div id="bottom-news-list">
							<%-bottomNewsList%>
						</div>		
					</div>
					<div class="col-sm-3">
						<div class="right-news">
							<div class="category-title right-news-title">
								TIN LIÊN QUAN
							</div>
							<div class="right-news-list">
								<%-relateNewsList%>
							</div>
						</div>
						<div class="right-news">
							<div class="category-title right-news-title">
								TIN HOT
							</div>
							<div class="right-news-list">
								<%-newestNewsList%>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>				
		<!-- Section 1 end-->
		<div id="more">
			<a href="/category/tin-tuc-moi-nhat/trang-1">Xem toàn bộ</a>
		</div>
